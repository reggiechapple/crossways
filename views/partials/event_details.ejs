<div class="modal fade" id="eventDetails-<%= event._id %>" tabindex="-1" aria-labelledby="#eventDetails-<%= event._id %>-Label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="eventDetails-<%= event._id %>-Label"><%= event.name %> Details</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p><%= event.location %></p>
        <p><%= event.startTime %></p>
        <p><%= event.endTime %></p>
        <p><%= event.maxAttendees %></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Send message</button>
      </div>
    </div>
  </div>
</div>